+++ b/CMakeLists.txt
@@ -0,0 +1,19 @@
+cmake_minimum_required(VERSION 3.12)
+project(IrrXML CXX)
+set(PROJECT_VERSION 1.2)
+
+include_directories(src)
+file(GLOB HEADER_FILES "src/*.h")
+
+add_library(IrrXML src/irrXML.cpp)
+target_include_directories(IrrXML PUBLIC "${CMAKE_INSTALL_INCLUDEDIR}/irrxml")
+
+set_target_properties(IrrXML PROPERTIES PUBLIC_HEADER "${HEADER_FILES}")
+
+install(
+    TARGETS ${PROJECT_NAME}
+    RUNTIME DESTINATION bin
+    LIBRARY DESTINATION lib
+    ARCHIVE DESTINATION lib
+    PUBLIC_HEADER DESTINATION include/irrxml
+    )
